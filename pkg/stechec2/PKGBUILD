# Maintainer: Prologin <serveur@prologin.org>

pkgver=prologin2015
pkgname=stechec2
pkgrel=4
pkgdesc="Stechec2 with ${pkgver} rules"
arch=('i686' 'x86_64')
url="http://prologin.org/"
license=('GPL')
provides=('stechec2' $pkgver)
depends=('gflags' 'python2' 'zeromq' 'ocaml' 'python-yaml')
makedepends=('git')
source=("git+https://bitbucket.org/prologin/stechec2"
        "git+https://bitbucket.org/prologin/${pkgver}")
sha512sums=(SKIP
            SKIP)

prepare() {
    cd stechec2
    ln --force --symbolic "${srcdir}/${pkgver}" games/
}

build() {
    cd stechec2
    python2 waf.py configure build --prefix=/usr --with-games=${pkgver}
    (cd "games/${pkgver}/spectators/dumper"; make)
}

package() {
    cd stechec2
    python2 waf.py install --destdir="$pkgdir"
    mkdir -p "${pkgdir}/usr/lib"
    install -Dm755 "games/${pkgver}/spectators/dumper/dumper.so" "${pkgdir}/usr/lib/lib${pkgver}-dumper.so"
}
